{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "lib/**/*.ts"
  ]
}
