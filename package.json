{
  "name": "flac-bindings",
  "version": "3.0.0-beta.0",
  "libflac": "1.4.0",
  "libogg": "1.3.5",
  "description": "libflac bindings to node.js with easy to use API",
  "repository": "https://github.com/melchor629/node-flac-bindings/",
  "type": "module",
  "exports": {
    ".": "./lib/index.js",
    "./api": "./lib/api.js",
    "./decoder": "./lib/decoder/index.js",
    "./encoder": "./lib/encoder/index.js",
    "./package.json": "./package.json"
  },
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "coverage": "./scripts/coverage.sh",
    "install": "node scripts/flac-build.js",
    "prebuild": "node ./scripts/flac-prebuild.js",
    "lint": "eslint --ext js lib test examples"
  },
  "keywords": [
    "flac",
    "encoder",
    "decoder",
    "binding"
  ],
  "author": "melchor9000",
  "license": "ISC",
  "dependencies": {
    "bindings": "^1.5.0",
    "cmake-js": "^6.3.2",
    "debug": "^4.3.4",
    "detect-libc": "^2.0.1",
    "node-addon-api": "^5.0.0",
    "tar-stream": "^2.2.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jest": "^28.1.2",
    "@types/node": "^14.18.21",
    "@types/temp": "^0.9.1",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "jest": "^28.1.1",
    "jest-extended": "^2.0.0",
    "temp": "^0.9.4"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0",
    "electron": "^12.0.0"
  },
  "binary": {
    "napi_versions": [
      8
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "test/",
      "node_modules"
    ],
    "coverageProvider": "v8",
    "coverageReporters": [
      [
        "lcovonly",
        {
          "file": "js.info"
        }
      ],
      "text"
    ],
    "roots": [
      "test"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "node",
    "transform": {}
  },
  "funding": {
    "type": "individual",
    "url": "https://ko-fi.com/melchor629"
  },
  "files": [
    "lib/*",
    "src/*",
    "scripts/flac-build.js",
    "CMakeLists.txt",
    "LICENSE",
    "readme.md"
  ]
}
